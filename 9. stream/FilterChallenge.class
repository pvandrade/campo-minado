package streams;

import java.util.Arrays;
import java.util.List;

public class Filer {
    
    public static void main(String[] args) {
        
        Candidate c1 = new Candidate("Brian", 7, 6.4, 5.3);
        Candidate c2 = new Candidate("Carl", 6, 5.6, 7.5);
        Candidate c3 = new Candidate("Diana", 5, 7.5, 6.8);
        Candidate c4 = new Candidate("Eve", 4, 8.2, 8.5);
        Candidate c5 = new Candidate("Fred", 8, 4.2, 4.2);
        Candidate c6 = new Candidate("Glen", 9, 9.5, 3.5);

        List<Candidate> candidates = Arrays
            .asList(c1, c2, c3, c4, c5, c6);
            
        Predicate<Candidate> englishOk = c -> c.englishLevel > 5;
        Predicate<Candidate> techsOk = c -> c.hardSkills >= 6;
        Predicate<Candidate> behaviorOk = c -> c.softSkills >= 5;
        
        Function<Candidate, String> congratulations = 
            c -> "Congratulations, " + c.name +"! You're approved."
        
        candidates.stream()
            .filter(englishOk)
            .filter(techsOk)
            .filter(behaviorOk)            
            .map(congratulations)
            .forEach(System.out::println); 
    }
}

